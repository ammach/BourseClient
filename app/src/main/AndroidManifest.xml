<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ammach.bourse">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FirstActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserActivity"
            android:label="User"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AdminActivity"
            android:label="Admin"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".UserDetailActivity"
            android:label="@string/title_activity_user_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActionsActivity"
            android:label="Valeurs d&apos;action"
            android:parentActivityName=".UserDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyActionsActivity"
            android:label="Mes Actions"
            android:parentActivityName=".UserDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProfilActivity"
            android:label="Mon Profil"
            android:parentActivityName=".UserDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DetailActionActivity"></activity>
    </application>

</manifest>